<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:icon">@drawable/logo</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlActivated">@color/onze_kleur</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/onze_kleur</item>
        <item name="android:icon">@drawable/logo</item>

        <!-- Support library compatibility -->
        <item name="background">@color/onze_kleur</item>
        <item name="icon">@drawable/logo</item>
    </style>

    <color name="red">#ff0000</color>
    <color name="darkred">#D10000</color>
    <color name="green">#00ff00</color>
    <color name="lightgreen">#7CFF75</color>
    <color name="lightgrey">#B8B8B8</color>
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>
    <color name="onze_kleur">#E0411D</color>
</resources>
