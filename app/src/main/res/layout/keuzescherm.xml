<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/contentdescription_logo"
        android:src="@drawable/logohd" />

    <Button
        android:id="@+id/button_inloggen"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imageview_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@color/onze_kleur"
        android:hapticFeedbackEnabled="true"
        android:text="Inloggen" />

    <Button
        android:id="@+id/button_registreren"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button_inloggen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/onze_kleur"
        android:hapticFeedbackEnabled="true"
        android:onClick="registreren"
        android:text="Registreren" />

</RelativeLayout>
