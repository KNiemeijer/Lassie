<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:contentDescription=""
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:src="@drawable/upload" />

            <TextView
                android:id="@+id/textview_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_upload"
                android:layout_centerHorizontal="true"
                android:text="Foto uploaden"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <EditText
                android:id="@+id/edittext_naam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_rassoort"
                android:layout_below="@+id/textview_upload"
                android:layout_marginTop="28dp"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_naam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textview_eigenschappen"
                android:layout_alignTop="@+id/edittext_naam"
                android:labelFor="@id/edittext_naam"
                android:text="Naam:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview_diersoort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textview_eigenschappen"
                android:layout_below="@+id/edittext_naam"
                android:labelFor="@+id/edittext_diersoort"
                android:text="Diersoort:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_diersoort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_kleur"
                android:layout_alignTop="@+id/textview_diersoort"
                android:ems="10" />


            <EditText
                android:id="@+id/edittext_rassoort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_kleur"
                android:layout_alignTop="@+id/textview_rassoort"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_rassoort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textview_eigenschappen"
                android:layout_below="@+id/edittext_diersoort"
                android:labelFor="@id/edittext_rassoort"
                android:text="Ras:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_geslacht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_eigenschappen"
                android:layout_below="@+id/edittext_rassoort"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_geslacht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textview_eigenschappen"
                android:layout_below="@+id/edittext_rassoort"
                android:labelFor="@id/edittext_geslacht"
                android:text="Geslacht:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_kleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_eigenschappen"
                android:layout_below="@+id/edittext_geslacht"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_kleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textview_eigenschappen"
                android:layout_below="@+id/edittext_geslacht"
                android:labelFor="@id/edittext_kleur"
                android:text="@string/textview_kleur"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/edittext_eigenschappen"
                android:layout_below="@+id/edittext_kleur"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edittext_postcode"
                android:layout_toStartOf="@+id/edittext_kleur"
                android:labelFor="@id/edittext_postcode"
                android:text="Postcode:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittext_eigenschappen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button_GaNaarBevestiging"
                android:layout_below="@+id/edittext_postcode"
                android:ems="10" />

            <TextView
                android:id="@+id/textview_eigenschappen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edittext_eigenschappen"
                android:layout_toStartOf="@+id/edittext_postcode"
                android:labelFor="@id/edittext_eigenschappen"
                android:text="Eigenschappen:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_GaNaarBevestiging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittext_eigenschappen"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"

                android:layout_marginTop="10dp"
                android:background="@color/onze_kleur"

                android:clickable="true"
                android:enabled="true"
                android:padding="10dp"
                android:text="@string/button_send" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>